{
  "name": "@aonyxbuddy/core",
  "private": true,
  "module": "./src/index.ts",
  "types":"./src/index.ts",
  "type": "module",
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "bun-types": "latest",
    "jsdoc": "^4.0.2",
    "jest": "^29.7.0",
    "pino-pretty": "^10.3.1"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.3",
    "al-stream-elements-translator": "git@github.com:WaterKat/al-stream-elements-translator.git",
    "gifuct-js": "^2.1.2",
    "pino": "^8.17.2",
    "@aonyxbuddy/stream-events": "link:@aonyxbuddy/stream-events"
  },
  "scripts": {
    "generate-types" : "supabase gen types typescript --project-id rkageyxjkwpdbggemyhk --schema aonyxbuddy_public --schema public > ./src/database/supabase-types.ts",
    "serve" : "bun --watch ./serve.ts",
    "build:dev": "bun build ./src/index.test.ts --outfile ./out/index.test.js --minify",

    "build:aonyxbuddy": "bun build ./src/app.js --outfile ./out/app.js --minify",
    "build:aonyxbuddy-declarations": "tsc ./src/app.ts --declaration --emitDeclarationOnly --lib es2016 --outfile ./out/app.ts",
    "build": "bun run build:aonyxbuddy && bun run build:aonyxbuddy-declarations"
  }
}