{
  "name": "@aonyxbuddy/app-host",
  "private": true,
  "version": "1.0.0",
  "main": "./dist/app.js",
  "types": "./dist/app.d.ts",
  "type": "module",
  "scripts": {
    "lint": "eslint . --fix",
    "build": "tsc --build --force",
    "start": "node ./dist/app.js",
    "dockerize": "sudo docker compose up --build -d",
    "dockerize:attached": "sudo docker compose up --build",
    "dockerize:down" : "sudo docker compose down --rmi all --remove-orphans true",
    "dockerize:full" : "npm run lint && npm run build && npm run dockerize:down || npm run dockerize --build -d"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "typescript": "^5.0.2"
  },
  "dependencies": {
    "@types/cors": "^2.8.13",
    "cors": "^2.8.5",
    "express": "^4.18.2"
  }
}
